<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r8nu4xb6lkgb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cr40bf5ede0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/rb18x7yuopa5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="19dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="9dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rkvanyzotek"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/avatar"
                    android:scaleType="fitXY"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/rc33z4iw6pef"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/chuong"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <!-- Menu icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginBottom="78dp"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/rperhtsnxhoe"
                    app:shapeAppearanceOverlay="@style/cr40"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="11dp"
                    android:src="@drawable/Menu"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <!-- TITLE -->
            <TextView
                android:id="@+id/rj4tefrq8bf"
                android:textColor="#4A4A4A"
                android:textSize="36sp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lịch sử đánh giá \nbằng trắc nghiệm"/>

            <!-- LISTVIEW -->
            <ListView
                android:id="@+id/listHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/transparent"
                android:dividerHeight="20dp"
                android:paddingStart="27dp"
                android:paddingEnd="27dp"
                android:layout_marginBottom="50dp"/>

            <!-- HOME BUTTON (CENTERED) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="127dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rtmmuxgva7i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr10b7fa7b5"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="23dp">

                    <TextView
                        android:id="@+id/r0o9eoax204zh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trang chủ"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
