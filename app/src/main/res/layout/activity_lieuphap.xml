                android:textSize="20sp"
                android:layout_marginBottom="57dp"
                android:layout_marginStart="24dp"
                android:layout_height="wrap_content"
                android:layout_width="246dp"
                android:text="Mức độ trầm cảm hiện tại:\nTrung bình "
                />
