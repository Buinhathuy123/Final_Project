                android:id="@+id/r13koel999b5i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="44dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="45dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rqu97ifsjzpf"
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Điều trị bằng âm nhạc"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/r4nki7pkg5mv"
                    app:shapeAppearanceOverlay="@style/cr40"
                    android:layout_width="100dp"
                    android:layout_height="52dp"
                    android:src="@drawable/spoti"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rqq5g6e1g9sg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="177dp"
