<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r79i3sxoby6v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cr40bf5ede0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ryadem7eze3m"
                app:shapeAppearanceOverlay="@style/cr40"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:id="@+id/rtlwzygchggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="67dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rtiq6mrpt6xn"
                    android:textColor="#4A4A4A"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Quên mật khẩu"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rgze0l1i2jbq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="80dp"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/r4nqas1h0egj"
                    app:shapeAppearanceOverlay="@style/cr40"
                    android:layout_width="225dp"
                    android:layout_height="166dp"
                    android:src="@drawable/key"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r0nadfjmysodm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rz73f4gbh42n"
                    android:textColor="#4A4A4A"
                    android:textSize="13sp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Địa chỉ email"
                    />
                <TextView
                    android:id="@+id/rp0jkm1bzr4"
                    android:textColor="#1D1E20"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="bill.sanders@example.com"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r7q6t4uufpie"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E7E8EA"
                android:layout_marginBottom="164dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ry607ej2t0ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rkg30ddyi0p"
                    android:textColor="#4A4A4A"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"
                    android:layout_width="238dp"
                    android:gravity="center"
                    android:text="Vui lòng viết email của bạn để nhận mã xác nhận để đặt mật khẩu mới."
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rmf1gio2snn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#9775FA"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rx02i0hgtbo"
                    android:textColor="#FEFEFE"
                    android:textSize="17sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="41dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Xác nhận thư"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
